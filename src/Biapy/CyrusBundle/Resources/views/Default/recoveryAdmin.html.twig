{% extends 'BiapyCyrusBundle::layout.html.twig' %}

{% block title %}{{ "Recovery"|trans }}{% endblock %}

{% block bar %}{% endblock %}

{% block body %}
	<div class="sonata-bc" align="center">
		<div class="connection">
			{% if flash is defined %}
				<div class="alert alert-error">{{ flash }}</div>
			{%  endif %}
			<h4>{{ message }}</h4><br/>
			{% if form is defined %}
					<div class="form">
						<form action={{ path('recovery_admin_page') }} method="post">
							{{ form_widget(form) }}
							<input type="submit" />
							</form><br />
					</div>
			{% endif %}
		</div>
	</div>
{% endblock %}