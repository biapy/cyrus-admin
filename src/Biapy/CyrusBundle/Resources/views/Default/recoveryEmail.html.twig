{% extends 'BiapyCyrusBundle::layout.html.twig' %}

{% block title %}Recovery by mail{% endblock %}

{% block bar %}{% endblock %}

{% block body %}
	<div class="sonata-bc" align="center">
		<div class="connection">
			{% if flash is defined %}
				<div class="alert alert-error">{{ flash }}</div>
			{%  endif %}
			{% if message is defined %}<h4>{{ message }}</h4><br/>{% endif %}
			{% if form is defined %}
				{% if validToken %}
					<div class="form">
						<form action={{ path('recovery_token_page', { 'token': token }) }} method="post">
							{{ form_widget(form) }}
							<input type="submit" />
							</form><br />
					</div>
				{%  else %}
					<div class="form">
						<form action={{ path('recovery_email_page') }} method="post">
							{{ form_widget(form) }}
							<input type="submit" />
							</form><br />
					</div>
				{% endif %}
			{% endif %}
		</div>
	</div>
{% endblock %}