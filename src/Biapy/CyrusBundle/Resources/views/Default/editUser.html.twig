{% extends 'BiapyCyrusBundle::layout.html.twig' %}
{% block title %}{{ "User Settings Panel"|trans }}{% endblock %}

{% block body %}
	<div class="sonata-bc" align="center">
		<div class="connection">
			<h4>{{ message }}</h4><br/>
			{% if form is defined %}
				<div class="form">
					<form action={{ path('user_edit_page') }} method="post">
						{{ form_widget(form) }}
						<button type="submit">{{ "Submit"|trans }}</button>
						</form><br />
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
